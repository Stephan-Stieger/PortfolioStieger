---
import {getPathFromModuleId} from "../helper";
import Link from "./Link.astro";
import * as AboutMe from '../pages/aboutMe.astro';
import * as Contact from '../pages/contact.astro';
import * as Home from '../pages/index.astro';
import * as Project from '../pages/projects.astro';
import { parse } from 'node-html-parser';

//const allPages:any = await Astro.glob('../../src/pages/*.astro');
//const pathsAndTitles = await getPathAndTitleOfAListOfComponents(allPages);

const Pages=[AboutMe,Contact,Home,Project];
---
<div class="flex flex-row justify-between items-center p-16">
    <div class="sign">
        <span class="fast-flicker">S</span>tie<span class="flicker">g</span>er
    </div>
    <div class="flex justify-end gap-16">
        {Pages.map((component) => (
            component.TITEL!='Home' && (
                <Link href={`/${getPathFromModuleId(component.default.moduleId)}`}>{component.TITEL}</Link>
            )
            ))}
    </div>
</div>

<style>
    @font-face {
        font-family: Clip;
        src: url("https://acupoftee.github.io/fonts/Clip.ttf");
    }

    body {
        background-color: #141114;
        background-image: linear-gradient(335deg, black 23px, transparent 23px),
        linear-gradient(155deg, black 23px, transparent 23px),
        linear-gradient(335deg, black 23px, transparent 23px),
        linear-gradient(155deg, black 23px, transparent 23px);
        background-size: 58px 58px;
        background-position: 0px 2px, 4px 35px, 29px 31px, 34px 6px;
    }

    .sign {
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: radial-gradient(
                ellipse 50% 35% at 50% 50%,
                #6b1839,
                transparent
        ); 
        font-family: "Clip";
        text-transform: uppercase;
        font-size: 2em;
        color: #d8b9f9;
        text-shadow: 0 0 0.6rem #d8b9f9, 0 0 1.5rem #a960ec,
        -0.2rem 0.1rem 1rem #a960ec, 0.2rem 0.1rem 1rem #a960ec,
        0 -0.5rem 2rem #7e2ec2, 0 0.5rem 3rem #7e2ec2;
        animation: shine 2s forwards, flicker 3s infinite;
    }

    @keyframes blink {
        0%,
        22%,
        36%,
        75% {
            color: #d8b9f9;
            text-shadow: 0 0 0.6rem #d8b9f9, 0 0 1.5rem #a960ec,
            -0.2rem 0.1rem 1rem #a960ec, 0.2rem 0.1rem 1rem #a960ec,
            0 -0.5rem 2rem #7e2ec2, 0 0.5rem 3rem #7e2ec2;
        }
        28%,
        33% {
            color: #a960ec;
            text-shadow: none;
        }
        82%,
        97% {
            color: #7e2ec2;
            text-shadow: none;
        }
    }

    .flicker {
        animation: shine 2s forwards, blink 3s 2s infinite;
    }

    .fast-flicker {
        animation: shine 2s forwards, blink 10s 1s infinite;
    }

    @keyframes shine {
        0% {
            color: #6b1839;
            text-shadow: none;
        }
        100% {
            color: #d8b9f9;
            text-shadow: 0 0 0.6rem #d8b9f9, 0 0 1.5rem #a960ec,
            -0.2rem 0.1rem 1rem #a960ec, 0.2rem 0.1rem 1rem #a960ec,
            0 -0.5rem 2rem #7e2ec2, 0 0.5rem 3rem #7e2ec2;
        }
    }

    @keyframes flicker {
        from {
            opacity: 1;
        }

        4% {
            opacity: 0.9;
        }

        6% {
            opacity: 0.85;
        }

        8% {
            opacity: 0.95;
        }

        10% {
            opacity: 0.9;
        }

        11% {
            opacity: 0.922;
        }

        12% {
            opacity: 0.9;
        }

        14% {
            opacity: 0.95;
        }

        16% {
            opacity: 0.98;
        }

        17% {
            opacity: 0.9;
        }

        19% {
            opacity: 0.93;
        }

        20% {
            opacity: 0.99;
        }

        24% {
            opacity: 1;
        }

        26% {
            opacity: 0.94;
        }

        28% {
            opacity: 0.98;
        }

        37% {
            opacity: 0.93;
        }

        38% {
            opacity: 0.5;
        }

        39% {
            opacity: 0.96;
        }

        42% {
            opacity: 1;
        }

        44% {
            opacity: 0.97;
        }

        46% {
            opacity: 0.94;
        }

        56% {
            opacity: 0.9;
        }

        58% {
            opacity: 0.9;
        }

        60% {
            opacity: 0.99;
        }

        68% {
            opacity: 1;
        }

        70% {
            opacity: 0.9;
        }

        72% {
            opacity: 0.95;
        }

        93% {
            opacity: 0.93;
        }

        95% {
            opacity: 0.95;
        }

        97% {
            opacity: 0.93;
        }

        to {
            opacity: 1;
        }
    }

</style>


