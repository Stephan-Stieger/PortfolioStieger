  }























  .duotone {
    position: relative;
  }

  .duotone img {
  }

  /* CSS generated layers for duotone shadow/highlight colors */

  .duotone::before,
  .duotone::after {
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    z-index: 1;
    position: absolute;
    top: 0;
    left: 0;
  }




  /* CSS generated layers for duotone shadow/highlight colors */

  .duotone::before,
  .duotone::after {
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    z-index: 1;
    position: absolute;
    top: 0;
    left: 0;
  }

  /* highlight color */
  @supports (mix-blend-mode: darken){
    .duotone::after{
      background-color: #b87df2;
      mix-blend-mode: darken;
    }
  }

  /* shadow color */
  @supports (mix-blend-mode: lighten){
    .duotone::before{
      background-color: #3a0e5d;
      mix-blend-mode: lighten;
    }
  }

</style>

